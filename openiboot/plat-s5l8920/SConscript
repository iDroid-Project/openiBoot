	# until we implement it all
	'#device.c',
	'#mtd.c',
	'#bdev.c',
	'#nand.c',
	'#vfl.c',
	'#ftl.c',
	'#openiboot.c',
	'#util.c',
	'#malloc.c',
	'#sha1.c',
	'#tasks.c',
	'#printf.c',
	'#framebuffer.c',
	'#commands.c',
	'#actions.c',
	'#scripting.c',
	'#stb_image.c',
	'#images.c',
	'#syscfg.c',
	'#nvram.c',

	's5l8920.c',
	'usbphy.c',
	'aes.c',
	'buttons.c',
	'chipid.c',
	'clock.c',
	'event.c',
	'gpio.c',
	'i2c.c',
	'interrupt.c',
	'clcd.c',
	'mipi_dsim.c',
	'miu.c',
	'mmu.c',
	'power.c',
	'spi.c',
	'timer.c',
	'cdma.c',
