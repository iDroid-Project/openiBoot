Import("*")

env = env.Clone()
env.Append(CPPPATH = [Dir('includes')])
env.Append(CPPDEFINES = ['ARM_A8', 'CONFIG_S5L8920', 'MALLOC_NO_WDT'])

env.AddModules([
	"acm",
	"nor-spi",
	"usb-synopsys",
	"vfl-vfl",
	"vfl-vsvfl",
	"images",
	"ftl-yaftl",
	])

plat_s5l8920_src = arch_arm_src + env.Localize([
