Import("*")

env = env.Clone()
env.Append(CPPPATH = [Dir('includes')])
env.Append(ASFLAGS = ['-L'+str(Dir('includes'))])
env.Append(CPPDEFINES = ['CONFIG_A4'])

plat_a4_src = arch_arm_src + base_src + env.Localize([
	'a4.c',
	'buttons.c',
	'chipid.c',
	'clock.c',
	'event.c',
	'gpio.c',
	'i2c.c',
	'interrupt.c',
	'lcd.c',
	'miu.c',
	'mmu.c',
	'power.c',
	'spi.c',
	'timer.c',
	'uart.c',
	])# + hfs_src
Export('plat_a4_src')

env.SConscript('iPhone4G.SConscript', 'env')
env.SConscript('iPad1G.SConscript', 'env')
